<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>delete Employee</title>
    <link rel="stylesheet" href="../public/css/home.css">
</head>

<body>
    <div class="topnav">
        <a href="/home">Home</a>
        <a href="/create">Create Employee</a>
        <a href="/payrate">Pay Rates</a>

    </div>
    <div class="form">
        <form action="/deleteinfo" method="post">
            <fieldset>
                <legend class="nav_form">Do you want to Delete Employee</legend>
                <div>
                    <div class="inputgroup none">
                        <label for="idem">ID employee:</label>
                        <input type="number" id="idem" name="idem" value="<%= employee_delete.idEmployee%>"><br><br>
                    </div>
                    <div class="inputgroup">
                        <label for="emnum">Employee Number:</label>
                        <input type="number" id="emnum" name="emnum"
                            value="<%= employee_delete.EmployeeNumber%>"><br><br>
                    </div>
                    <div class="inputgroup">
                        <label for="lname">Last name:</label>
                        <input type="text" id="lname" name="lname" value="<%= employee_delete.LastName%>"><br><br>
                    </div>
                    <div class="inputgroup">
                        <label for="fname">first name:</label>
                        <input type="text" id="fname" name="fname" value="<%= employee_delete.FirstName%>"><br><br>
                    </div>


                    <div>
                        <button>Confirm</button>
                    </div>
                </div>
            </fieldset>
        </form>

    </div>
</body>

</html>