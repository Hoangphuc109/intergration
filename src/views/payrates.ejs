<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="../public/css/home.css">
</head>

<body>
    <div class="topnav">
        <a href="/home">Home</a>
        <a href="/create">Create Employee</a>
        <a class="active" href="/payrates">Pay Rates</a>
    </div>

    <table>
        <tr>
            <th>idPay Rate</th>
            <th>Pay Rate Name</th>
            <th>Value</th>
            <th>Tax Percentage</th>
            <th>Pay Type</th>
            <th>Pay Amount</th>
            <th>PT - Level C</th>
            <th>Action</th>

        </tr>

        <% List_payrate.forEach(function(payrates){ %>
            <tr>
                <td>
                    <%= payrates['idPayRates'] %>
                </td>
                <td>
                    <%= payrates['PayRateName'] %>
                </td>
                <td>
                    <%= payrates.Value %>
                </td>
                <td>
                    <%= payrates['TaxPercentage'] %>
                </td>
                <td>
                    <%= payrates['PayType'] %>
                </td>
                <td>
                    <%= payrates['PayAmount'] %>
                </td>
                <td>
                    <%= payrates['PT_LevelC'] %>
                </td>

                <td>
                    <form action="/update/<%= payrates['idPayRates'] %>" method="post">
                        <button>update</button>
                    </form>
                    <!-- <button>update</button> -->
                </td>
            </tr>

            <%});%>


    </table>


</body>

</html>