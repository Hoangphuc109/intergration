<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Employee</title>
    <link rel="stylesheet" href="../public/css/home.css">
</head>

<body>
    <div class="topnav">
        <a href="/home">Home</a>
        <a href="/create">Create Employee</a>
        <a href="/payrates">Pay Rates</a>
    </div>
    <div class="form">
        <form action="/update_benefit" method="post">
            <fieldset>
                <legend class="nav_form">do u want update Employee</legend>
                <div class="inputgroup">
                    <label for="benefitid">BENEFIT_PLAN_ID:</label>
                    <input type="number" id="benefitid" name="benefitid"
                        value="<%= employee_update[0].BENEFIT_PLANS_ID %>">
                    <br><br>
                </div>
                <div class="inputgroup">
                    <label for="planName">PLAN_NAME:</label>
                    <input type="text" id="planName" name="planName" value="<%= employee_update[0].PLAN_NAME %>">
                    <br><br>
                </div>
                <div class="inputgroup">
                    <label for="deductable">DEDUCTABLE:</label>
                    <input type="number" id="deductable" name="deductable" value="<%= employee_update[0].DEDUCTABLE %>">
                    <br><br>
                </div>

                <div class="inputgroup">
                    <label for="percentageCopay">PERCENTAGE_COPAY:</label>
                    <input type="number" id="percentageCopay" name="percentageCopay"
                        value="<%= employee_update[0].PERCENTAGE_COPAY %>"><br><br>
                </div>

                <div>
                    <button>Update</button>
                </div>
            </fieldset>
        </form>
    </div>
</body>

</html>