<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Employee</title>
    <link rel="stylesheet" href="../public/css/home.css">
</head>

<body>
    <div class="topnav">
        <a href="/home">Home</a>
        <a href="/create">Create Employee</a>
        <a href="/payrate">Pay Rates</a>

    </div>
    <div class="form">
        <form action="/updateinfo" method="post">
            <fieldset>
                <legend class="nav_form">Form Update Employee</legend>
                <div>
                    <div class="inputgroup none">
                        <label for="idem">ID employee:</label>
                        <input type="number" id="idem" name="idem" value="<%= employee_update['idEmployee']%>"><br><br>
                    </div>
                    <div class="inputgroup">
                        <label for="emnum">Employee Number:</label>
                        <input type="number" id="emnum" name="emnum"
                            value="<%= employee_update['EmployeeNumber']%>"><br><br>
                    </div>
                    <div class="inputgroup">
                        <label for="lname">Last name:</label>
                        <input type="text" id="lname" name="lname" value="<%= employee_update['LastName'] %>"><br><br>
                    </div>
                    <div class="inputgroup">
                        <label for="fname">first name:</label>
                        <input type="text" id="fname" name="fname" value="<%= employee_update['FirstName']%>"><br><br>
                    </div>
                    <div class="inputgroup">
                        <label for="ssn">SSN:</label>
                        <input type="number" id="ssn" name="ssn" value="<%= employee_update.SSN%>"><br><br>
                    </div>
                    <div class="inputgroup">
                        <label for="payrate">Pay Rate:</label>
                        <input type="text" id="payrate" name="payrate" value="<%= employee_update['PayRate']%>"><br><br>
                    </div>
                    <div class="inputgroup">
                        <label for="idpayrate">Pay Rates_idPay Rates:</label>
                        <input type="number" id="idpayrate" name="idpayrate"
                            value="<%= employee_update['PayRates_idPayRates']%>"><br><br>
                    </div>
                    <div class="inputgroup">
                        <label for="vcd">Vacation Days:</label>
                        <input type="number" id="vcd" name="vcd" value="<%= employee_update['VacationDays']%>"><br><br>
                    </div>
                    <div class="inputgroup">
                        <label for="paidtodate">Paid To Date:</label>
                        <input type="number" id="paidtodate" name="paidtodate"
                            value="<%= employee_update['PaidToDate']%>"><br><br>
                    </div>
                    <div class="inputgroup">
                        <label for="paidlastyear">Paid Last Year:</label>
                        <input type="number" id="paidlastyear" name="paidlastyear"
                            value="<%= employee_update['PaidLastYear']%>"><br><br>
                    </div>

                    <div>
                        <button>SAVE</button>
                    </div>
                </div>
            </fieldset>
        </form>

    </div>
</body>

</html>